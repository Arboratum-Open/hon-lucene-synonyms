<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>with-solr-core</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<!--  include just solr-core in the jar output; exclude all other jars, including dependent jars -->
	<dependencySets>
		<dependencySet>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>org.apache.lucene:lucene-core</exclude>
				<exclude>org.apache.solr:solr-common</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
    <fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
